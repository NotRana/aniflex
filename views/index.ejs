<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <script src="https://cdn.tailwindcss.com"></script> -->
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
    <link rel="stylesheet" href="/public/css/style.main.css">
    <link rel="stylesheet"  href="/public/css/output.css">
    <link rel="icon" type="image/x-icon" href="<%= config.brand_image %>">
    <title><%= config.name %></title>
</head>
<body style="background:black;">
    <%- include('nav') %>
    <div class="content">
      <h1 style="margin-top: 30px;margin-left: 13px;font-size: 25px;">POPULAR</h1>
      <div class="popular-anime" style="overflow:auto;">
        <% populer.forEach(val => { %>
          <a href="/anime/<%= val._id %>">
            <div class="card">
              <img src="<%= val.image %>" alt="<%= val.name %>">
              <p class="title"><%= val.name %></p>
            </div>
          </a>
        <% }); %>

      </div>
      <h1 style="margin-top: 30px;margin-left: 13px;font-size: 25px;">LATEST</h1>
      <div class="latest-anime" style="overflow:auto;">
        <% latest.forEach(val => { %>
          <a href="/anime/<%= val._id %>">
          <div class="card">
            <img src="<%= val.image %>" alt="jgfkjfbsj">
            <p class="title"><%= val.name %></p>
          </div>
          </a>
        <% }); %>
        
      </div>
    </div>
    <%- include('footer') %>
</body>
</html>