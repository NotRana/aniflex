          <!DOCTYPE html>
          <html lang="en">
          <head>
              <meta charset="UTF-8">
              <meta name="viewport" content="width=device-width, initial-scale=1.0">
              <title><%= anime.title %></title>
              <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
              <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
              <link rel="stylesheet" type="text/css" href="/public/css/style.main.css">
              <!-- <link rel="stylesheet" type="text/css" href="/public/css/video-play.css"> -->
              <link rel="icon" type="image/x-icon" href="<%= config.brand_image %>">
          </head>
          <body class="bg-gray-900  font-sans">
              <!-- Include the navigation -->
              <%- include("nav") %>

              <div class="container mx-auto p-4">
                  <div class="flex flex-col lg:flex-row">
                      <!-- Video Player -->
                      <div class="lg:w-2/3">
                          <div class="video-wrapper relative" style="padding-top: 56.25%;">
                              <iframe src="<%= anime.video_url %>" width="800" height="600" allowfullscreen allowtransparency allow="autoplay" scrolling="no" frameborder="0" class="absolute top-0 left-0 w-full h-full"></iframe>
                          </div>
                          <div class="video-title mt-4 text-xl font-bold"><%= anime.title %></div>
                      </div>

                      <!-- Related Videos -->

                      <div class="lg:w-1/3 lg:pl-4 mt-4 lg:mt-0">
                          <h2 class="text-xl font-semibold mb-2">Other Episodes</h2>
                          <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
                              <!-- Sample Related Video Card -->
                            <% recomend.forEach(val => { %>
                              <a href="/play/<%= val.anime_id %>/<%= val.ep_no %>">
                                <div class="bg-gray-800 rounded-lg shadow-lg">
                                    <!-- <div class="relative overflow-hidden">


                                    </div> -->
                                    <div class="p-4">
                                        <h3 class="text-lg font-semibold mb-2"><%= val.title %></h3>
                                        <p class="text-sm text-gray-400">Episode NO: <%= val.ep_no %></p>
                                    </div>
                                </div>
                              </a>
                            <% }); %>
                              <!-- Add more related video cards as needed -->
                          </div>
                      </div>
                  </div>
              </div>

              <!-- Include the footer -->
              <%- include("footer") %>

              <script src="/public/js/script.main.js"></script>
          </body>
          </html>
